@model ControleDeEstoque.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
}


.<div class="container">
    <div class="row">
        <h3 class="titulo">Entrar no sistema</h3>
    </div>
    <div class="row">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Conta", new { ReturnUrl = ViewBag.returnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.ValidationSummary(true, "", new {@class="text-danger"})
                <div class="form-group">
                    @Html.LabelFor(a => a.Usuario, new { @class = "form-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(a => a.Usuario, new { @class = "form-control" })
                        @Html.ValidationMessageFor(a => a.Usuario, "" , new {@class="text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(b => b.Senha, new { @class = "form-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(b => b.Senha, new { @class = "form-control" })
                        @Html.ValidationMessageFor(b => b.Senha, "", new { @class = "text-danger" })

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10 col-md-offset-2">
                        @Html.CheckBoxFor(c => c.LembreMe)
                        @Html.LabelFor(c => c.LembreMe)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10 col-md-offset-2">
                        <input type="submit" class="byn btn-success" value="Entrar" />
                    </div>
                </div>


            }

        </section>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")   
}

